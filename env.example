#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------
# IMPORTANT: Set to 'production' when deploying!
CI_ENVIRONMENT = development

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------
app.baseURL = 'https://yourdomain.com/'
app.indexPage = ''
app.appTimezone = 'Asia/Makassar'

#--------------------------------------------------------------------
# DATABASE
#--------------------------------------------------------------------
database.default.hostname = localhost
database.default.database = your_database
database.default.username = your_username
database.default.password = YOUR_STRONG_PASSWORD_HERE
database.default.DBDriver = MySQLi
database.default.DBPrefix = ci_
database.default.port = 3306
database.default.charset = utf8mb4
database.default.DBCollat = utf8mb4_unicode_ci

#--------------------------------------------------------------------
# ENCRYPTION
#--------------------------------------------------------------------
# Generate a new key with: php spark key:generate
# NEVER use the default key in production!
encryption.key = 

#--------------------------------------------------------------------
# SESSION
#--------------------------------------------------------------------
# For production, consider using database sessions:
# session.driver = 'CodeIgniter\Session\Handlers\DatabaseHandler'
# session.savePath = 'ci_sessions'

#--------------------------------------------------------------------
# GOOGLE SHEETS
#--------------------------------------------------------------------
google.sheets.enabled = true
google.sheets.credentials_file = '/path/to/google-credentials.json'
google.spreadsheet.id = 'YOUR_SPREADSHEET_ID'
google.sheets.sync_interval = 60

#--------------------------------------------------------------------
# CRON SECURITY
#--------------------------------------------------------------------
# Generate a strong random key (32+ characters)
# Example: openssl rand -hex 32
CRON_SECRET_KEY = GENERATE_A_STRONG_RANDOM_KEY_HERE

#--------------------------------------------------------------------
# SECURITY NOTES
#--------------------------------------------------------------------
# 1. NEVER commit .env file to version control
# 2. Use HTTPS in production (app.baseURL should start with https://)
# 3. Set CI_ENVIRONMENT = production
# 4. Generate strong encryption.key
# 5. Use strong database password
# 6. Generate strong CRON_SECRET_KEY
# 7. Ensure google-credentials.json is outside web root
